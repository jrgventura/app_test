<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true">
        <shape>
            <gradient
                android:startColor="@color/colorPrimary"
                android:endColor="@color/colorPrimary"
                android:angle="90"
                android:type="linear"/>
            <corners
                android:radius="25dp" />
            <padding
                android:top="10dp"
                android:bottom="10dp"
                android:left="@dimen/dp10"
                android:right="@dimen/dp10" />
        </shape>
    </item>
    <item android:state_enabled="false">
        <shape>
            <gradient
                android:startColor="@color/transparent"
                android:endColor="#9E9E9E"
                android:angle="270" />

            <corners
                android:radius="25dp" />
            <padding
                android:top="10dp"
                android:bottom="10dp"
                android:left="@dimen/dp10"
                android:right="@dimen/dp10" />
        </shape>
    </item>
    <item>
        <shape>
            <gradient
                android:startColor="@color/colorPrimary"
                android:endColor="@color/colorPrimary"
                android:angle="90" />
            <corners
                android:radius="25dp" />
            <padding
                android:top="10dp"
                android:bottom="10dp"
                android:left="@dimen/dp10"
                android:right="@dimen/dp10" />
        </shape>
    </item>

</selector>
